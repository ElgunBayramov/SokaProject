                                <img style="width: -webkit-fill-available;" src="~/uploads/images/@Model.ImagePath" alt="images">
                            </div>
                            <ul class="blog-details-list">
                                <li><i class="ri-calendar-check-line"></i>@Model.PublishDate?.ToString("dd MMM, yyyy")</li>
