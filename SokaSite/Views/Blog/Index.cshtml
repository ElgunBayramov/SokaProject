@model IEnumerable<BlogPost>
@{
    ViewData["Title"] = "Index";
}

 <!-- Start Page Banner Area-->
        <div class="page-banner-area">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-9 col-md-6">
                        <div class="single-page-banner-content">
                            <h1>Our Blog</h1>
                            <p><a asp-controller="Home" asp-action="Index">Home</a>Blog</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="page-banner-img" data-aos="fade-up-left" data-aos-duration="3000" data-aos-once="true">
                            <img src="~/assets/images/page-banner/page-banner-image-1.png" alt="images">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Page Banner Area-->

        <!-- Start Blog Area -->
        <div class="banner-blog-area pt-100 pb-70">
            <div class="container">
                <div class="row justify-content-center"> 
                   @foreach (var item in Model)
{
    <div class="col-lg-4 col-md-6">
        <div class="single-blog-card" data-aos="fade-up" data-aos-duration="500" data-aos-once="true">
            <div class="blog-img">
                <a asp-controller="blog" asp-action="details" asp-route-slug="@item.Slug">
                    <img style="height:313px;" src="~/uploads/images/@item.ImagePath" alt="images">
                </a>
            </div>
            <span><i class="ri-calendar-check-line"></i>@item.PublishDate?.ToString("dd MMM, yyyy")</span>
            <div class="single-blog-text">
                @*                                <ul>
                    <li><i class="ri-account-circle-line"></i><a href="blog-details.html">Kendall</a></li>
                    <li><i class="ri-football-line"></i><a href="blog-details.html">Football</a></li>
                    </ul>*@
                <h3><a asp-controller="blog" asp-action="details" asp-route-slug="@item.Slug">@item.Title</a></h3>
                <div class="textpart">
                    @Html.Raw(item.Body)
                </div>
                <a asp-controller="blog" asp-action="details" asp-route-slug="@item.Slug" class="default-btn style-1">Read More<i class="ri-arrow-right-line"></i></a>
            </div>
        </div>
    </div>
}
                </div>
                <div class="blog-bg-btn">
                    <a href="blog.html" class="default-btn style-1">Load More <i class="ri-arrow-right-line"></i></a>
                </div>
            </div>
        </div>
        <!-- End Blog Area -->
        <style>
        .textpart{
            height:120px;
            overflow:hidden;
        }
        </style>


