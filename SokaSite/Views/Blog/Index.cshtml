            <!-- Menu For Desktop Device -->
            <div class="main-nav main-two">         
                <div class="container-fluid">    
                    <nav class="navbar navbar-expand-md navbar-light">   

                        <a href="index.html">   
                            <img src="~/assets/images/logo-two.png" class="main-logo" alt="Images">  
                            <img src="~/assets/images/logo-img.png" class="optional-logo" alt="Images">     
                        </a>   

                        <div class="collapse navbar-collapse mean-menu" id="navbarSupportedContent"> 
                            <ul class="navbar-nav m-auto">  
                                <li class="nav-item">  
                                    <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                                </li> 

                                <li class="nav-item">
                                    <a asp-controller="Home" asp-action="About" class="nav-link">About Us</a>         
                                </li>  
                                
                                <li class="nav-item"> 

                                    <a href="#" class="nav-link dropdown-toggle">Pages</a>   
                                    
                                    <ul class="dropdown-menu">
                                        <li class="nav-item">
                                            <a asp-controller="Pages" asp-action="Index" class="nav-link">Player List</a>     
                                        </li> 
                                        <li class="nav-item">
                                            <a asp-controller="Pages" asp-action="Details" class="nav-link">Player Details</a>     
                                        </li> 
                                    </ul>

                                </li>  

                                <li class="nav-item"> 
                                    <a href="#" class="nav-link dropdown-toggle">Shop</a>     
                                    
                                    <ul class="dropdown-menu">
                                        <li class="nav-item">
                                            <a asp-controller="Shop" asp-action="Index" class="nav-link">Shop</a>     
                                        </li> 
                                        <li class="nav-item">
                                            <a asp-controller="Shop" asp-action="Details" class="nav-link">Shop Details</a>     
                                        </li> 
                                        <li class="nav-item">
                                            <a asp-controller="Shop" asp-action="Cart" class="nav-link">Cart</a>     
                                        </li> 
                                    </ul>

                                </li> 

                                <li class="nav-item"> 

                                    <a href="#" class="nav-link dropdown-toggle">Blog</a>   
                                    
                                    <ul class="dropdown-menu">
