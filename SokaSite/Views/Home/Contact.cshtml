@model ContactPost
@{
    ViewData["Title"] = "Contact";
}

        <!-- Start Page Banner Area-->
        <div class="page-banner-area" style="padding-top:150px">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-9 col-md-6">
                        <div class="single-page-banner-content">
                            <h1>Contact Us</h1>
                            <p><a asp-controller="Home" asp-action="Index">Home</a>Contact Us</p>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <div class="page-banner-img" data-aos="fade-up-left" data-aos-duration="3000" data-aos-once="true">
                            <img src="~/assets/images/page-banner/page-banner-image-1.png" alt="images">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Page Banner Area-->

        <!-- Start Contact Form Area -->
        <div class="contact-form-area ptb-100">
            <div class="container">
                <div class="row">
                    <div class="col-lg-7">
                        <div class="contact-from"> 
                            <h2>Contact Information</h2>
                             @if (TempData["message"]!=null)
                            {
                                <div class="alert alert-success">
                                    @TempData["message"]
                                </div>
                            }
                            <form id="contactForm" method="post"> 
                                <div class="row">
                                    <div class="col-lg-6 col-md-6">
                                        <div class="form-group">
                                            <input asp-for="Name" class="form-control" placeholder="Name" >
                                            <div class="help-block with-errors"></div> 
                                        </div>
                                    </div>

                                    <div class="col-lg-6 col-md-6">
                                        <div class="form-group">
                                            <input asp-for="Email" class="form-control" placeholder="Email" >
                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div> 

                                    <div class="col-lg-6 col-md-6">  
                                        <div class="form-group">
                                            <input asp-for="PhoneNumber" placeholder="Phone" class="form-control">
                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div> 

                                    <div class="col-lg-6 col-md-6">  
                                        <div class="form-group">
                                            <input asp-for="Subject" placeholder="Subject" class="form-control">
                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>  
                    
                                    <div class="col-lg-12">
                                        <div class="form-group"> 
                                            <textarea asp-for="Message" cols="30" rows="3" placeholder="Message" ></textarea>
                                            <div class="help-block with-errors"></div>
                                        </div>
                                    </div>

                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <div class="form-check">
                                                <input
                                                    name="gridCheck"
                                                    value="I agree to the terms and privacy policy."
                                                    class="form-check-input"
                                                    type="checkbox"
                                                    id="gridCheck"
                                                    required
                                                >
                                                <label class="form-check-label" for="gridCheck">
                                                    Accept <a href="terms-conditions.html">Terms Of Services</a> And<a href="privacy-policy.html">privacy policy</a>
                                                </label> 
                                                <div class="help-block with-errors gridCheck-error"></div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-lg-12 col-md-12">
                                        <button type="submit" class="default-btn">    
                                            Submit Now<i class="ri-arrow-right-line"></i>
                                        </button>
                                        <div id="msgSubmit" class="h3 text-center hidden"></div>
                                        <div class="clearfix"></div>
                                    </div>
                                </div> 
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-5">
                        <div class="single-contact-item">
                            <h2>Get In Touch With Us</h2>
                            <div class="contact-text">
                                <div class="contact-icon">
                                    <i class="ri-map-pin-fill"></i>
                                </div>
                                <p><span>Address:</span>Baku,Surakhani District</p>
                            </div>
                            <div class="contact-text">
                                <div class="contact-icon">
                                    <i class="ri-mail-line"></i>
                                </div>
                                <p><span>Email Address:</span><a href="">elgunbayramov223@gmail.com</a></p>
                            </div>
                            <div class="contact-text">
                                <div class="contact-icon">
                                    <i class="ri-phone-line"></i>
                                </div>
                                <p><span>Phone Number:</span><a href="">+994516839288</a></p>
                            </div>
                            <div class="contact-text">
                                <div class="contact-icon">
                                    <i class="ri-printer-line"></i>
                                </div>
                                <p><span>Fax:</span><a href="">+994997779298</a></p> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Start Contact Form Area -->

        <!-- Start Contact Map Area -->
        <div class="contact-map-area pb-100">
            <div class="container">
                <div class="map">
                    <div class="google-map">
                       <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d24316.951738350814!2d50.087237923716636!3d40.37297237469223!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4030661278b80f8b%3A0x29959ab85facdaf2!2sHovsan%2C%20Azerbaijan!5e0!3m2!1sen!2sbd!4v1677277515148!5m2!1sen!2sbd" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Contact Map Area -->

