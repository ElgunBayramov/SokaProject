@model Result
@{
    ViewData["Title"] = "Details";
}
<!-- Page-header start -->
<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Bootstrap Basic Tables</h4>
                    <span>
                        lorem ipsum dolor sit amet, consectetur adipisicing
                        elit
                    </span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="../index.html"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">Bootstrap Table</a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">Basic Table</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
<!-- Page-body start -->
<div class="page-body">
    <!-- Basic table card start -->
    <div class="card">
        <div class="card-header">
            <h5>Basic Form Inputs</h5>
            <span>
                Add class of <code>.form-control</code> with
                <code>&lt;input&gt;</code> tag
            </span>


            <div class="card-header-right">
                <i class="icofont icofont-spinner-alt-5"></i>
            </div>

        </div>
        <div class="card-block">
            <h4 class="sub-title">Basic Inputs</h4>
            <div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="Title">
                    </label>
                    <div class="col-sm-10">
                        <p class="form-control">
                            @Model.Title
                        </p>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="Body">
                    </label>
                    <div class="col-sm-10">
                        <p class="form-control">
                            @Model.Body
                        </p>
                    </div>
                </div>
                 <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="ClubName">
                    </label>
                    <div class="col-sm-10">
                        <p class="form-control">
                            @Model.ClubName
                        </p>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="ImagePath">
                    </label>
                    <div class="col-sm-10">
                      <label class="image-viewer" for="choose-image" style="background-image:url(/uploads/images/@Model.ImagePath)"></label>
                       
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="RivalClubName">
                    </label>
                    <div class="col-sm-10">
                        <p class="form-control">
                            @Model.RivalClubName
                        </p>
                    </div>
                </div>
             <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="RivalImagePath">
                    </label>
                    <div class="col-sm-10">
                      <label class="image-viewer2" for="choose-image2" style="background-image:url(/uploads/images/@Model.RivalImagePath)"></label>
                       
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="GameDate">
                    </label>
                    <div class="col-sm-10">
                        <div class="form-control">
                            @Model.GameDate?.ToString("dd MMM, yyyy")
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-12 d-flex justify-content-end">
                        <a class="btn btn-success mr-2" asp-action="edit" asp-route-id="@Model.Id">Edit</a>
                        <a class="btn btn-info" asp-action="index">Go Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page-body end -->
<style>
    .image-viewer2 {
        width: 100%;
        height: 170px;
        min-height: 170px;
        position: relative;
        border: 1px solid #ccc;
        cursor: pointer;
      
        background-position: center center;
        background-repeat: no-repeat;
        background-size: contain;
      }
      
      .image-viewer2:not([style])::before {
        content: "sekil secin";
        position: absolute;
        transform: translate(-50%, -50%);
        left: 50%;
        top: 50%;
      }
</style>
 