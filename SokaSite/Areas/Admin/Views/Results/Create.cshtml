@model ResultCreateCommand

@{
    ViewData["Title"] = "Create";
}

<!-- Page-header start -->
<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Bootstrap Basic Tables</h4>
                    <span>
                        lorem ipsum dolor sit amet, consectetur adipisicing
                        elit
                    </span>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="../index.html"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">Bootstrap Table</a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a href="#!">Basic Table</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- Page-header end -->
<!-- Page-body start -->
<div class="page-body">
    <!-- Basic table card start -->
    <div class="card">
        <div class="card-header">
            <h5>Basic Form Inputs</h5>
            <span>
                Add class of <code>.form-control</code> with
                <code>&lt;input&gt;</code> tag
            </span>


            <div class="card-header-right">
                <i class="icofont icofont-spinner-alt-5"></i>
            </div>

        </div>
        <div class="card-block">
            <h4 class="sub-title">Basic Inputs</h4>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="Title">
                    </label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Title">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="Body">
                    </label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="Body">
                        <span asp-validation-for="Body" class="text-danger"></span>
                    </div>
                </div>
                 <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="ClubName">
                    </label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="ClubName">
                        <span asp-validation-for="ClubName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="Image">
                    </label>
                    <div class="col-sm-10">
                        <label class="image-viewer" for="choose-image"></label>
                        <input class="form-control" id="choose-image" name="image" type="file" hidden/>
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="RivalClubName">
                    </label>
                    <div class="col-sm-10">
                        <input class="form-control" asp-for="RivalClubName">
                        <span asp-validation-for="RivalClubName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" asp-for="Image2">
                    </label>
                    <div class="col-sm-10">
                        <label class="image-viewer2" for="choose-image2"></label>
                        <input class="form-control" id="choose-image2" name="image2" type="file" hidden/>
                        <span asp-validation-for="Image2" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-12 d-flex justify-content-end">
                        <button class="btn btn-success mr-2">Save</button>
                        <a class="btn btn-info" asp-action="index">Go Back</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
<!-- Page-body end -->
<style>
    .image-viewer2 {
        width: 100%;
        height: 170px;
        min-height: 170px;
        position: relative;
        border: 1px solid #ccc;
        cursor: pointer;
      
        background-position: center center;
        background-repeat: no-repeat;
        background-size: contain;
      }
      
      .image-viewer2:not([style])::before {
        content: "sekil secin";
        position: absolute;
        transform: translate(-50%, -50%);
        left: 50%;
        top: 50%;
      }
</style>
@section addcss{
<link rel="stylesheet" href="~/libs/select2/css/select2.css">
}
@section addjs{
    <script src="~/libs/select2/js/select2.js"></script>
<script src="~/libs/ckeditor5/ckeditor.min.js"></script>
<script>
    $(document).ready(function() {
        ClassicEditor
    .create(document.querySelector('#editor'))
    .catch(error=>{
        console.error(error);
    });
    $('.select2').select2();
     const reader=new FileReader();
     const reader2=new FileReader();


    reader.addEventListener('load',function(e){
        const viewer=document.querySelector('.image-viewer');
        viewer.setAttribute('style',`background-image:url(${reader.result})`);
    });
    reader2.addEventListener('load',function(e){
      const viewer2=document.querySelector('.image-viewer2');
        viewer2.setAttribute('style',`background-image:url(${reader2.result})`);
    });

    document.querySelector('#choose-image').addEventListener('change',function(e){
        reader.readAsDataURL(e.currentTarget.files[0]);
    });
    document.querySelector('#choose-image2').addEventListener('change',function(e){
        reader2.readAsDataURL(e.currentTarget.files[0]);
    });
    });

</script>
}
